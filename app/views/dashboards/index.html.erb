<h1 style="text-align: center;">Dashboard</h1>

<div id="chart-container" style="width:70%; height:400px; padding-left: 12%; padding-top: 5%;"></div>


<br></br>

<div id="progress-bar-container"></div>

<% if @income.any? %>
 <% @income.each do |income| %>
    <%= income.name %>
 <% end %>
 <% else %>No Incomes Added
<% end %>

<% if @expenditure.any? %>
 <% @expenditure.each do |expenditure| %>
    <%= expenditure.name %>
 <% end %>
 <% else %>No Expenditures Added
<% end %>

<a href='/incomes/new'>Add Income</a>
<a href='/expenditures/new'>Add Expenditure</a>

